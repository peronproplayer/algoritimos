#include <iostream>
using namespace std;

int le_numero(string msg, int cont){
    int num;
    cout << msg << cont << "Â°" << endl;
    cin >> num;
    return num;
}

void imprimir_vetor(int vetor[], int tam){
    for(int i = 0; i < tam; i++){
        cout << vetor[i] << " ";
    }
    cout << endl;
}

void dobra_vetor(int vet[], int tam){
    for( int i = 0; i < tam; i++){
        vet[i] = vet[i] * 2;
    }
}

int main(){
    int vet_idades[5];

    cout << "insira um numero: " << endl;
    for(int i = 0;i < 5; i++){
        vet_idades[i] = le_numero("insira o numero ", i + 1);
    }
    cout << "antes de dobrar o vetor" << endl;
    imprimir_vetor(vet_idades, 5);

    dobra_vetor(vet_idades, 5);

    cout << "depois de dobrar o vetor" << endl;
    imprimir_vetor(vet_idades, 5);
}
